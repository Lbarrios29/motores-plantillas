<h1 class="text-center m-3">Vista de productos</h1>

<% if(productsExists) {%>

<table class="table table-dark table-sm align-middle">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
        </tr>
    </thead>
    <tbody>
        <% for( producto of productos ) { %>
        <tr>
            <td><%= producto.nombre %></td>
            <td><%= producto.precio %></td>
            <td>
                <img src="<%= producto.url %>" alt="Imagen" class="img-fluid">
            </td>
        </tr>
        <% } %>
    </tbody>
</table>

<% }else{ %>

<div class="bg-secondary">
    <p class="text-white fs-3 m-3 p-3 text-center">No se encontraron productos</p>
</div>

<% } %>

<form action="/">
    <button type="submit" class="btn btn-dark fw-bold">
        Formulario
    </button>
</form>
<br>