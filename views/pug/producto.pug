extends template

block productos
    - const estiloButton = "font-weight: 700;color: #fff;background-color: #212529;border-color: #212529;line-height: 1.5;text-align: center;text-decoration: none;"
    
    h1(style="text-align=center;margin=1rem;color=#212529")='Vista de productos'
    
    if productsExists
        table 
            thead
                tr
                    th(scope="col")='Nombre'
                    th(scope="col")='Precio'
                    th(scope="col")='Foto'                 
            tbody
                each producto in productos
                    tr
                        td=producto.nombre
                        td=producto.precio
                        td
                            img(src=producto.url,alt="Imagen") 
    else 
        div(style="background-color:#6c757d;")
            p(style="color:white;text-align=center;font-size: calc(1.3rem + .6vw); margin:1rem;pading:5rem")='No se encontraron productos' 
    
    form(action="/") 
        button(type="submit", style=estiloButton)= 'Formulario'        
     
    